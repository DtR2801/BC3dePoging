<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_intens.Pages.CreateProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_intens.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" 
                    x:Name="MainCreateFormStackPanel" 
                    
                    HorizontalAlignment="Left"
                    Background="#323232"
                    Padding="45,20">
            <TextBlock FontSize="36" FontWeight="SemiBold" Text="Nieuw Product" Margin="5, 25, 0, 45" Foreground="#faca16" />

            <TextBlock Text="Naam" 
                       Margin="0, 12.5, 0, 5"/>
            <TextBox x:Name="ProductNameTb" 
                     Margin="0, 7, 0, 7" 
                     Width="525"
                     Background="Black"
                     Padding="10"
                     FontSize="18"
                     Foreground="#faca16"/>

            <TextBlock Text="Prod. nummer" 
                       Margin="0, 12.5, 0, 5"/>
            <TextBox x:Name="ProdnumberTb" 
                     Margin="0, 7, 0, 7"
                     Width="525"
                     Background="Black"
                     Padding="10"
                     FontSize="18"
Foreground="#faca16"/>

            <TextBlock Text="Categorie" 
                       Margin="0, 12.5, 0, 5"/>
            <ComboBox x:Name="ComboBoxCb" 
                      Margin="0, 7, 0, 7"
                      Width="175"
                      Background="Black"
                      Padding="10"
                      FontSize="18"
Foreground="#faca16">
                <ComboBoxItem Content="Koffiebonen"/>
                <ComboBoxItem Content="Automaat" />
            </ComboBox>
            
            <TextBlock Text="Aant. voorradig" 
                       Margin="0, 12.5, 0, 5"/>
            <TextBox x:Name="UnitsInStockTb" 
                       Margin="0, 7, 0, 7"
                       Width="525"
                       Background="Black"
                     Padding="10"
                     FontSize="18"
Foreground="#faca16"/>

            <TextBlock Text="Aansluitings Kost" 
                       Margin="0, 12.5, 0, 5"/>
            <TextBox x:Name="InstallCostTb"
                     PlaceholderText="Leeg laten indien ontoepasselijk"
                     PlaceholderForeground="#9A9BA1"
                     Margin="0, 7, 0, 7"
                     Width="525"
                     Background="Black"
                     Padding="10"
                     FontSize="18"
Foreground="#faca16"/>

            <TextBlock Text="lease Kost" 
                       Margin="0, 12.5, 0, 5"/>
            <TextBox x:Name="LeaseCostTb" 
                     PlaceholderText="Leeg laten indien ontoepasselijk" 
                     PlaceholderForeground="#9A9BA1" 
                     Margin="0, 7, 0, 7"
                     Width="525"
                     Background="Black"
                     Padding="10"
                     FontSize="18"
Foreground="#faca16"/>

            <TextBlock Text="Prijs/KG" 
                       Margin="0, 12.5, 0, 5"/>
            <TextBox x:Name="PricePerKiloTb" 
                     Margin="0, 7, 0, 7" 
                     PlaceholderText="Leeg laten indien ontoepasselijk" 
                     PlaceholderForeground="#9A9BA1" 
                     Width="525"
                     Background="Black"
                     Padding="10"
                     FontSize="18"
Foreground="#faca16"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="C:\Users\d2801\OneDrive\Desktop\barroc_intens_G\Barroc intens\Assets\BICLOGO.png" Height="450" Width="650" Margin="0,20,0,65" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel x:Name="buttonStackPanel" 
        Orientation="Vertical"
        VerticalAlignment="Bottom"
        Grid.Column="2">
            <Button x:Name="SaveButton" 
            Click="SaveButton_Click"
            Background="#FACA16"
            Foreground="Black"
            FontSize="18"
            Height="45"
            Width="45"    
            Margin="5,5,10,5">
                <Button.Content>
                    <SymbolIcon Symbol="Save"/>
                </Button.Content>
            </Button>
            <Button x:Name="cancelButton" 
            Click="CancelButton_Click"
            Background="#FE6F5E"
            Foreground="Black"
            FontSize="18"
            Height="45"
            Width="45"    
            Margin="5,5,10,10">
                <Button.Content>
                    <SymbolIcon Symbol="Cancel"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Page>
